  <!-- Results Section -->
  <div class="container">
    <div class="row" id="reset-btn">
      <div class="col-md-4 ">
        <button class="btn btn-default" type="submit">New Search</button>
      </div>
      <div class="btn-header">
            <button id="beginner-btn" type="button" class="btn btn-success modal-btn">Beginner</button>
            <button id="intermediate-btn" type="button" class="btn btn-warning modal-btn">Intermediate</button>
            <button id="hardcore-btn" type="button" class="btn btn-danger modal-btn">Hardcore</button>
        </div>
    </div>
    <div class="row">
      <div id="trail-target" class="col-md-4">
      </div>
      <script id="result-template" type="text/x-handlebars-template">
        <div class="trail" data-id={{_id}}>
          <h3>{{name}}</h3>
          <p><strong>Rating: </strong>{{rating}}</p>
          <p><strong>Popular Trail: </strong>{{popularTrail}}</p>
          <p><strong>Address: </strong> {{address}}</p>
          <p><strong>Comments:</strong>
            <form id="comment-form">
              <div class="form-group">
                <input type="text" class="form-control add-comment" id="{{trailCode}}" placeholder="Leave a comment">
              </div>
              <button type="submit" style="visibility:hidden" class="btn btn-default btn-xs">Update</button>
            </form>
            <br/>
            <em>{{comments}}</em>
          </p>
          <div class="underline"></div>
        </div>
      </script>
        <div class="col-md-8">
          <div id="map">
          </div>
       </div>
     </hr>
  </div>
    <footer>
